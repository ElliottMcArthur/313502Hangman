<Window x:Class="_313502Hangman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_313502Hangman"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Canvas>
        <RadioButton x:Name="EasyMode" Content="Easy" Canvas.Top="10"/>
        <RadioButton x:Name="MediumMode" Content="Medium" Canvas.Left="73" Canvas.Top="10"/>
        <RadioButton x:Name="HardMode" Content="Hard" Canvas.Left="161" Canvas.Top="10" />
        <Button x:Name="btnGuess" Click="btnGuess_Click" Content="Start" Canvas.Top="36" Width="517"/>
        <TextBox x:Name="txtInput" Text="" Canvas.Left="36" Canvas.Top="66" Width="20" Height="20" MaxLength="1" MaxLines="1"/>
        <TextBlock x:Name="txtOutput" Canvas.Left="20" Canvas.Top="271" Width="125" Height="21"/>
        <Label x:Name="lblOutput" Content="" Canvas.Top="91" Width="166"/>
        <Label x:Name="lblOutput2" Canvas.Top="117" Height="44" Width="265"></Label>
        <Button x:Name="Check" Content="Check" Canvas.Top="66" Click="Check_Click" />
    </Canvas>
</Window>
